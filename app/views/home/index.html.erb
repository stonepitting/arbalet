<div id="home">
	<div id="about">
		<strong>
			Tips as a Service
		</strong>
		<span>
			Arbalet lets you display <b>messages, tips and help boxes</b> in your application in the <b>simplest way
			possible</b>.
		</span>
		<%= link_to('Register', new_user_registration_path, :class => 'button')  %>
	</div>	
	<div id="signin">
			<%= form_for("user", :url => user_session_path) do |f| %>
			  <%= f.text_field :email, :value => 'Email', :onfocus => 'this.value="";' %>
			  <%= f.text_field :password, :value => 'Password', :onfocus => 'this.value="";this.type="password"' %>
			  <%= f.check_box :remember_me %>
			  <%= f.label :remember_me %>
			  <%= f.submit 'Sign in' %>
			  <%= link_to "Forgot your password?", new_password_path('user') %>
			<% end %>
		
	</div>
</div>
