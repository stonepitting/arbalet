<h1>Editing <%=@page.name%></h1>

<%= render 'form' %>
<br />
<h2>Boxes</h2>
<select id="add-box">
	<option>Choose one</option>
	<% @available_boxes.each do |box| %>
	<option value="<%=box.id%>"><%=box.name%></option>
	<% end %>
</select>
<input type="button" class="button" onclick="return addBox(<%=@page.id%>)" value="Add" />
<ul>
	<% @p_boxes.each do |pbox| %>
	<li><%=pbox.box.name%> <%=link_to 'Del', page_box_path(pbox), :onclick => "return deleteObject('page_boxes', #{pbox.id}, #{pbox.app_id})"%></li>
	<% end %>
</ul>