<div id="object-visualizer">
	<a href="#" onclick="return backToListing(<%=@app.id%>)"><small>&laquo; Back to all pages</small></a><br />
	<div id="object-edit">

	</div>
	
</div>

<div id="listing-object">
	<h1>All pages</h1>
	<table class="table">
	  <tr>
	    <th width="20%">Name</th>
	    <th width="50%">Url</th>
	    <th>Enabled</th>
	    <th width="20%"></th>
	  </tr>

	<% 
	i = 0
	@pages.each do |page| 
		i += 1 
		%>
	  <tr class="<%= i%2 == 0 ? 'zebra':''%> ">
	    <td><%= link_to page.name, '#', :onclick => "return showObject('pages', #{page.id})" %></td>
	    <td><%= page.url %></td>
	    <td><%= page.enabled %></td>
	    <td>
			<%= link_to 'Destroy', '#', :onclick => "return deleteObject('pages', #{page.id}, #{page.app_id});" %>
		</td>
    
	  </tr>
	<% end %>
	</table>

	<h2>Add a new page</h2>
	<%=render :partial => 'pages/form'%>

</div>