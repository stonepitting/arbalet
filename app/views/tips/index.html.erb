<h1>Listing tips</h1>

<table>
  <tr>
    <th>Content</th>
    <th>App</th>
    <th>User</th>
    <th>Enabled</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tips.each do |tip| %>
  <tr>
    <td><%= tip.content %></td>
    <td><%= tip.app_id %></td>
    <td><%= tip.user_id %></td>
    <td><%= tip.enabled %></td>
    <td><%= link_to 'Show', tip %></td>
    <td><%= link_to 'Edit', edit_tip_path(tip) %></td>
    <td><%= link_to 'Destroy', tip, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

